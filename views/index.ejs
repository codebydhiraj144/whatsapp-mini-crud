<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>whatsappmini</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <h3>All Chats</h3>

    <form method="GET" action="/chats/new">
        <button type="submit">New chat</button>
    </form>

   <% for (let chat of chats) { %>
    <div class="chat">
        <p>From: <i><%= chat.from %></i></p>

        <div class="msg">

            <!-- EDIT BUTTON -->
            <form method="GET" action="/chats/<%= chat._id %>/edit">
                <button type="submit">Edit</button>
            </form>
        <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
</form>

            <p><i><%= chat.msg %></i></p>
        </div>

        <p>Received by: <i><%= chat.to %></i></p>
        <hr>

        <p><%= chat.created_at.toString().split(" ")[4] %></p>
        <p><%= chat.created_at.toString().split(" ").slice(0, 4).join(" ") %></p>
    </div>
<% } %>

</body>
</html>
